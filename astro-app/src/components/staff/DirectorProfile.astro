---
import { urlFor } from "../../utils/image";
import CoordinatorList from "./CoordinatorList.astro";
import type { StaffDirector } from "../../utils/sanity";

interface Props {
  director: StaffDirector;
  coordinatorHeading?: string;
}

const { director, coordinatorHeading = "Coordinators" } = Astro.props as Props;

const paragraphs = director.bio
  ? director.bio
      .split(/\n{2,}/)
      .map((item) => item.trim())
      .filter(Boolean)
  : [];

function getInitials(name: string) {
  const parts = name.trim().split(/\s+/);
  if (parts.length === 0) return "";
  if (parts.length === 1) return parts[0][0]?.toUpperCase() ?? "";
  return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
}

const headshotUrl = director.headshot?.asset
  ? urlFor(director.headshot).width(640).height(640).fit("crop").url()
  : null;
const headshotAlt = director.headshot?.alt ?? `${director.name} headshot`;
---

<article class="director" data-id={director._id}>
  <div class="media">
    {headshotUrl ? (
      <img src={headshotUrl} alt={headshotAlt} loading="lazy" />
    ) : (
      <div class="placeholder" aria-hidden="true">
        {getInitials(director.name)}
      </div>
    )}
  </div>
  <div class="content">
    <header class="header">
      <h2>{director.name}</h2>
      <p class="role">{director.role}</p>
    </header>
    {paragraphs.length > 0 && (
      <div class="bio">
        {paragraphs.map((text) => (
          <p>{text}</p>
        ))}
      </div>
    )}
    <CoordinatorList coordinators={director.coordinators} heading={coordinatorHeading} />
  </div>
</article>

<style>
  .director {
    display: grid;
    gap: 1.5rem;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 16px;
    background: #fff;
  }

  .media {
    max-width: 240px;
    width: 100%;
    aspect-ratio: 1 / 1;
  }

  .media img,
  .placeholder {
    width: 100%;
    height: 100%;
    border-radius: 16px;
    object-fit: cover;
    background: var(--brand-tint);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--brand-ink);
    font-size: var(--font-size-7);
    font-weight: 700;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .header h2 {
    font-family: var(--font-family-sans);
    font-size: var(--font-size-6);
    margin: 0;
  }

  .role {
    margin: 0.25rem 0 0;
    color: var(--text);
    font-size: var(--font-size-4);
    font-weight: 600;
  }

  .bio p {
    margin: 0 0 1rem;
    line-height: 1.7;
  }

  @media (min-width: 768px) {
    .director {
      grid-template-columns: 280px 1fr;
      gap: 2rem;
      padding: 2rem;
    }

    .media {
      max-width: unset;
      aspect-ratio: unset;
      height: 320px;
    }
  }
</style>
