---
import { PortableText } from "astro-portabletext";
import Layout from "../../layouts/Layout.astro";
import { getNationalTeamPage } from "../../utils/sanity";
import { urlFor } from "../../utils/image";
import EmailLink from "../../components/ui/EmailLink.astro";

const locale = "en";
const page = await getNationalTeamPage(locale);

const fallbackEmail = "teamcanada@quadballcanada.ca";

const fallback = {
  title: "Team Canada",
  subtitle: "Representing Canada on the world quadball stage.",
  content: [
    {
      _type: "block",
      style: "normal",
      children: [
        {
          _key: "fallback-1",
          _type: "span",
          text: "Team Canada brings together elite athletes from across the country to compete at international tournaments. Training pools are selected every two seasons with identification camps held in the fall.",
        },
      ],
    },
  ],
  cta: {
    label: "Contact Team Canada",
    href: `mailto:${fallbackEmail}`,
  },
};

const title = page?.seo?.metaTitle ?? page?.title ?? fallback.title;
const subtitle = page?.subtitle ?? fallback.subtitle;
const content = page?.content?.length ? page.content : fallback.content;
const heroImage = page?.heroImage;
const cta = page?.cta ?? fallback.cta;

// Extract email from mailto: links for hybrid display
const ctaEmail = cta?.href?.startsWith("mailto:") ? cta.href.replace("mailto:", "") : null;
---

<Layout title={title} alternate={{ en: "/teams/national-team/", fr: "/fr/equipes/equipe-nationale/" }} locale={locale}>
  <section class="national-team">
    <header class="national-team__hero">
      <div class="national-team__header">
        <h1>{page?.title ?? fallback.title}</h1>
        {subtitle && <p>{subtitle}</p>}
      </div>
      {heroImage && (
        <figure class="national-team__media">
          <img
            src={urlFor(heroImage).width(1440).height(600).fit("crop").url()}
            alt={heroImage.alt ?? ""}
            loading="eager"
            decoding="async"
          />
        </figure>
      )}
    </header>

    <article class="national-team__content">
      <PortableText value={content} />
    </article>

    {cta?.label && (
      <div class="national-team__cta">
        {ctaEmail ? (
          <div class="national-team__email">
            <span class="national-team__email-label">{cta.label}:</span>
            <EmailLink email={ctaEmail} />
          </div>
        ) : cta?.href ? (
          <a class="national-team__cta-btn" href={cta.href}>{cta.label}</a>
        ) : null}
      </div>
    )}

    <section class="national-team__fundraising">
      <h2>Support Team Canada</h2>
      <p>Help our athletes represent Canada at international competitions. Your donation directly supports training, travel, and equipment for Team Canada players.</p>
      <a class="national-team__fundraising-btn" href="https://makeachamp.com/qcteamcanada" target="_blank" rel="noopener">
        Donate on MakeAChamp
      </a>
    </section>
  </section>
</Layout>

<style>
  .national-team {
    padding: 3rem 0;
    display: grid;
    gap: 2.5rem;
  }

  .national-team__hero {
    display: grid;
    gap: 1.5rem;
  }

  .national-team__header h1 {
    margin: 0;
  }

  .national-team__header p {
    margin: 0.5rem 0 0;
    color: rgba(15, 23, 42, 0.75);
  }

  .national-team__media {
    margin: 0;
    border-radius: 1.25rem;
    overflow: hidden;
    max-height: 420px;
  }

  .national-team__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .national-team__content {
    display: grid;
    gap: 1rem;
    font-size: 1rem;
  }

  .national-team__content :global(p) {
    margin: 0;
  }

  .national-team__cta {
    text-align: center;
    margin: 0;
  }

  .national-team__cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.75rem;
    border-radius: 999px;
    background: var(--brand-primary);
    color: #fff;
    font-weight: 700;
    text-decoration: none;
  }

  .national-team__cta-btn:hover {
    background: var(--brand-ink);
  }

  .national-team__email {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(32, 75, 165, 0.08);
    border-radius: 0.75rem;
    font-size: 1rem;
  }

  .national-team__email-label {
    font-weight: 600;
    color: rgba(15, 23, 42, 0.7);
  }

  .national-team__fundraising {
    text-align: center;
    padding: 2.5rem 1.5rem;
    border-radius: 1.25rem;
    background: var(--brand-tint);
    display: grid;
    gap: 1rem;
    max-width: 720px;
    margin: 0 auto;
  }

  .national-team__fundraising h2 {
    margin: 0;
  }

  .national-team__fundraising p {
    margin: 0 auto;
    max-width: 48ch;
    color: rgba(15, 23, 42, 0.75);
  }

  .national-team__fundraising-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.75rem;
    border-radius: 999px;
    font-weight: 700;
    background: var(--brand-primary);
    color: #fff;
    text-decoration: none;
    margin-top: 0.5rem;
  }

  .national-team__fundraising-btn:hover {
    background: var(--brand-ink);
  }
</style>
