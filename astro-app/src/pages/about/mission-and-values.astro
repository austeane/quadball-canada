---
import Layout from "../../layouts/Layout.astro";

const values = [
  {
    title: "Fair and Respectful Play",
    description: "We play with integrity and respect, no matter the outcome",
  },
  {
    title: "Inclusive Community",
    description: "Creating connection through a shared love of sport and ensuring our community is safe, accessible, and inclusive to all",
  },
  {
    title: "Shared Leadership",
    description: "Working in collaboration with our members to achieve our goals collectively and make space for everyone to contribute",
  },
  {
    title: "Safety",
    description: "The physical, cultural, and emotional welfare of our members and volunteers is paramount in every quadball event",
  },
  {
    title: "Anti-Oppression",
    description: "Actively working to combat oppression and racism in our sport and the broader community",
  },
  {
    title: "Fun",
    description: "Infusing the joyful and adventurous spirit that draws people to play quadball into everything we do",
  },
];

const alternate = {
  en: "/about/mission-and-values/",
  fr: "/fr/a-propos/mission-et-valeurs/",
};
---

<Layout title="Mission & Values â€” Quadball Canada" alternate={alternate} locale="en">
  <meta slot="head" name="description" content="Learn about Quadball Canada's mission to lead, grow, and promote the sport of quadball in Canada, and the values that guide everything we do." />

  <div class="hero">
    <div class="hero-content">
      <h1>Mission & Values</h1>
    </div>
  </div>

  <div class="page-wrapper">
    <section class="mission-section">
      <div class="mission-card">
        <span class="badge">Mission</span>
        <p class="mission-text">To lead, grow, and promote the sport of quadball in Canada.</p>
      </div>
    </section>

    <section class="values-section">
      <div class="values-container">
        <div class="values-header">
          <span class="badge badge-values">Values</span>
        </div>
        <div class="values-grid">
          {values.map((value) => (
            <article class="value-card">
              <h3>{value.title}</h3>
              <p>{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--brand-primary) 0%, #7A1302 100%);
    margin: 0 calc(-50vw + 50%);
    padding: 3.5rem 1rem;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero h1 {
    color: white;
    margin: 0;
    font-size: clamp(2.75rem, 10vw, 5rem);
    font-weight: 800;
    letter-spacing: -0.025em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .page-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .badge {
    display: inline-block;
    background: var(--brand-primary);
    color: white;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    padding: 0.75rem 2rem;
    border-radius: 6px;
    box-shadow: 0 4px 12px rgba(158, 23, 3, 0.3);
  }

  /* Mission Section */
  .mission-section {
    padding: 2.5rem 0;
    display: flex;
    justify-content: center;
  }

  .mission-card {
    background: white;
    border: 3px solid var(--brand-primary);
    border-radius: 20px;
    padding: 2rem 2rem;
    text-align: center;
    max-width: 800px;
    width: 100%;
    box-shadow: 0 8px 40px rgba(158, 23, 3, 0.1);
  }

  .mission-card .badge {
    margin-bottom: 1.25rem;
  }

  .mission-text {
    font-size: clamp(1.5rem, 4vw, 2rem);
    line-height: 1.35;
    color: var(--text-strong);
    margin: 0;
    font-weight: 500;
    max-width: none;
  }

  /* Values Section */
  .values-section {
    background: linear-gradient(180deg, var(--brand-tint) 0%, #fff 100%);
    margin: 0 calc(-50vw + 50%);
    padding: 2.5rem 1rem 3rem;
  }

  .values-container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .values-header {
    width: 100%;
    text-align: center;
  }

  .badge-values {
    font-size: 1.125rem;
    padding: 0.875rem 2.5rem;
  }

  .values-grid {
    display: grid;
    gap: 1.5rem;
    width: 100%;
  }

  .value-card {
    background: white;
    border: 3px solid var(--brand-primary);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 6px 24px rgba(158, 23, 3, 0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(158, 23, 3, 0.15);
  }

  .value-card h3 {
    color: var(--brand-primary);
    font-size: 1.375rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    letter-spacing: -0.01em;
  }

  .value-card p {
    color: var(--text);
    font-size: 1.0625rem;
    line-height: 1.65;
    margin: 0;
    max-width: none;
  }

  @media (min-width: 640px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .mission-card {
      padding: 2.5rem 3rem;
    }

    .values-section {
      padding: 3rem 2rem 3.5rem;
    }
  }

  @media (min-width: 1000px) {
    .values-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }

    .value-card {
      padding: 1.75rem;
    }
  }
</style>
