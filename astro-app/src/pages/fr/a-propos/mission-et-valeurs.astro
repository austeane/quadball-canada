---
import Layout from "../../../layouts/Layout.astro";

const values = [
  {
    title: "Jeu équitable et respectueux",
    description: "Nous jouons avec intégrité et respect, peu importe le résultat",
  },
  {
    title: "Communauté inclusive",
    description: "Créer des liens grâce à un amour partagé du sport et s'assurer que notre communauté est sécuritaire, accessible et inclusive pour tous",
  },
  {
    title: "Leadership partagé",
    description: "Travailler en collaboration avec nos membres pour atteindre nos objectifs collectivement et faire de la place pour que chacun puisse contribuer",
  },
  {
    title: "Sécurité",
    description: "Le bien-être physique, culturel et émotionnel de nos membres et bénévoles est primordial dans chaque événement de quadball",
  },
  {
    title: "Anti-oppression",
    description: "Travailler activement à combattre l'oppression et le racisme dans notre sport et la communauté au sens large",
  },
  {
    title: "Plaisir",
    description: "Insuffler l'esprit joyeux et aventureux qui attire les gens à jouer au quadball dans tout ce que nous faisons",
  },
];

const alternate = {
  en: "/about/mission-and-values/",
  fr: "/fr/a-propos/mission-et-valeurs/",
};
---

<Layout title="Mission et valeurs — Quadball Canada" alternate={alternate} locale="fr">
  <meta slot="head" name="description" content="Découvrez la mission de Quadball Canada de diriger, développer et promouvoir le sport du quadball au Canada, ainsi que les valeurs qui guident tout ce que nous faisons." />

  <div class="hero">
    <div class="hero-content">
      <h1>Mission et valeurs</h1>
    </div>
  </div>

  <div class="page-wrapper">
    <section class="mission-section">
      <div class="mission-card">
        <span class="badge">Mission</span>
        <p class="mission-text">Diriger, développer et promouvoir le sport du quadball au Canada.</p>
      </div>
    </section>

    <section class="values-section">
      <div class="values-container">
        <div class="values-header">
          <span class="badge badge-values">Valeurs</span>
        </div>
        <div class="values-grid">
          {values.map((value) => (
            <article class="value-card">
              <h3>{value.title}</h3>
              <p>{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--brand-primary) 0%, #7A1302 100%);
    margin: 0 calc(-50vw + 50%);
    padding: 3.5rem 1rem;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero h1 {
    color: white;
    margin: 0;
    font-size: clamp(2.75rem, 10vw, 5rem);
    font-weight: 800;
    letter-spacing: -0.025em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .page-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .badge {
    display: inline-block;
    background: var(--brand-primary);
    color: white;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    padding: 0.75rem 2rem;
    border-radius: 6px;
    box-shadow: 0 4px 12px rgba(158, 23, 3, 0.3);
  }

  /* Mission Section */
  .mission-section {
    padding: 2.5rem 0;
    display: flex;
    justify-content: center;
  }

  .mission-card {
    background: white;
    border: 3px solid var(--brand-primary);
    border-radius: 20px;
    padding: 2rem 2rem;
    text-align: center;
    max-width: 800px;
    width: 100%;
    box-shadow: 0 8px 40px rgba(158, 23, 3, 0.1);
  }

  .mission-card .badge {
    margin-bottom: 1.25rem;
  }

  .mission-text {
    font-size: clamp(1.5rem, 4vw, 2rem);
    line-height: 1.35;
    color: var(--text-strong);
    margin: 0;
    font-weight: 500;
    max-width: none;
  }

  /* Values Section */
  .values-section {
    background: linear-gradient(180deg, var(--brand-tint) 0%, #fff 100%);
    margin: 0 calc(-50vw + 50%);
    padding: 2.5rem 1rem 3rem;
  }

  .values-container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .values-header {
    width: 100%;
    text-align: center;
  }

  .badge-values {
    font-size: 1.125rem;
    padding: 0.875rem 2.5rem;
  }

  .values-grid {
    display: grid;
    gap: 1.5rem;
    width: 100%;
  }

  .value-card {
    background: white;
    border: 3px solid var(--brand-primary);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 6px 24px rgba(158, 23, 3, 0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(158, 23, 3, 0.15);
  }

  .value-card h3 {
    color: var(--brand-primary);
    font-size: 1.375rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    letter-spacing: -0.01em;
  }

  .value-card p {
    color: var(--text);
    font-size: 1.0625rem;
    line-height: 1.65;
    margin: 0;
    max-width: none;
  }

  @media (min-width: 640px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .mission-card {
      padding: 2.5rem 3rem;
    }

    .values-section {
      padding: 3rem 2rem 3.5rem;
    }
  }

  @media (min-width: 1000px) {
    .values-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }

    .value-card {
      padding: 1.75rem;
    }
  }
</style>
