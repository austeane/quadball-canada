---
import type { InferGetStaticParamsType } from "astro";
import { PortableText } from "astro-portabletext";
import BlockImage from "@/components/portable-text/BlockImage.astro";
import Layout from "@/layouts/Layout.astro";
import { getEvent, getEvents, type Locale } from "@/utils/sanity";
import { formatDate } from "@/utils";

interface Props {
  slug: string;
  locale: Locale;
}

const { slug, locale } = Astro.props;
const isFr = locale === "fr";
const event = await getEvent(slug, locale);

if (!event) throw new Error(`Event not found: ${slug}`);

const content = isFr
  ? {
      backToEvents: "← Retour aux événements",
      when: "Quand",
      where: "Lieu",
      about: "À propos de cet événement",
      virtual: "Virtuel",
      hybrid: "Hybride",
      getDirections: "Obtenir l'itinéraire",
    }
  : {
      backToEvents: "← Back to Events",
      when: "When",
      where: "Where",
      about: "About This Event",
      virtual: "Virtual",
      hybrid: "Hybrid",
      getDirections: "Get Directions",
    };

const eventsPath = isFr ? "/fr/evenements/" : "/events/";
const upcomingPath = isFr ? "/fr/evenements/a-venir/" : "/events/upcoming/";

function formatEventDate(start: string, end?: string): string {
  const startDate = new Date(start);
  const endDate = end ? new Date(end) : null;

  const dateOpts: Intl.DateTimeFormatOptions = {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  };

  const timeOpts: Intl.DateTimeFormatOptions = {
    hour: "numeric",
    minute: "2-digit",
  };

  const startDateStr = startDate.toLocaleDateString(isFr ? "fr-CA" : "en-CA", dateOpts);
  const startTimeStr = startDate.toLocaleTimeString(isFr ? "fr-CA" : "en-CA", timeOpts);

  if (endDate) {
    const endDateStr = endDate.toLocaleDateString(isFr ? "fr-CA" : "en-CA", dateOpts);
    const endTimeStr = endDate.toLocaleTimeString(isFr ? "fr-CA" : "en-CA", timeOpts);

    if (startDate.toDateString() === endDate.toDateString()) {
      return `${startDateStr}, ${startTimeStr} – ${endTimeStr}`;
    }
    return `${startDateStr} – ${endDateStr}`;
  }

  return `${startDateStr}, ${startTimeStr}`;
}

const googleMapsUrl = event.location?.address
  ? `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(event.location.address)}`
  : null;
---

<Layout
  title={`${event.title} — Quadball Canada`}
  alternate={{ en: `/events/${event.slugEn}/`, fr: `/fr/evenements/${event.slugFr ?? event.slugEn}/` }}
  locale={locale}
>
  <article class="event-detail">
    <nav class="breadcrumb">
      <a href={upcomingPath}>{content.backToEvents}</a>
    </nav>

    <header class="event-header">
      <div class="event-date-badge">
        <span class="event-date-badge__month">{new Date(event.startDateTime).toLocaleDateString(isFr ? "fr-CA" : "en-CA", { month: "short" })}</span>
        <span class="event-date-badge__day">{new Date(event.startDateTime).getDate()}</span>
      </div>
      <h1>{event.title}</h1>
    </header>

    <div class="event-meta">
      <div class="meta-card">
        <div class="meta-card__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
        </div>
        <div class="meta-card__content">
          <h3>{content.when}</h3>
          <p>{formatEventDate(event.startDateTime, event.endDateTime)}</p>
        </div>
      </div>

      {event.location && (event.location.name || event.location.address) && (
        <div class="meta-card">
          <div class="meta-card__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="meta-card__content">
            <h3>{content.where}</h3>
            {event.location.type === "online" && (
              <span class="location-badge">{content.virtual}</span>
            )}
            {event.location.type === "hybrid" && (
              <span class="location-badge">{content.hybrid}</span>
            )}
            {event.location.name && <p class="location-name">{event.location.name}</p>}
            {event.location.address && <p class="location-address">{event.location.address}</p>}
            {googleMapsUrl && event.location.type !== "online" && (
              <a href={googleMapsUrl} target="_blank" rel="noopener noreferrer" class="directions-link">
                {content.getDirections}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            )}
          </div>
        </div>
      )}
    </div>

    {event.description && (
      <section class="event-description">
        <h2>{content.about}</h2>
        <p>{event.description}</p>
      </section>
    )}

    {event.content && event.content.length > 0 && (
      <section class="event-content">
        <PortableText value={event.content} components={{ type: { image: BlockImage } }} />
      </section>
    )}
  </article>
</Layout>

<style>
  .event-detail {
    padding: 2rem 0 4rem;
    max-width: 800px;
  }

  .breadcrumb {
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--brand-primary);
  }

  .event-header {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .event-date-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    height: 80px;
    background: var(--brand-primary);
    color: #fff;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .event-date-badge__month {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .event-date-badge__day {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
  }

  .event-header h1 {
    margin: 0;
    font-size: 2rem;
    line-height: 1.2;
  }

  .event-meta {
    display: grid;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }

  @media (min-width: 600px) {
    .event-meta {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .meta-card {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--bg-secondary, #f8f9fa);
    border-radius: 12px;
  }

  .meta-card__icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    border-radius: 10px;
    color: var(--brand-primary);
  }

  .meta-card__content h3 {
    margin: 0 0 0.5rem;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }

  .meta-card__content p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text-strong);
  }

  .location-badge {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    background: color-mix(in oklab, var(--brand-primary) 15%, white);
    color: var(--brand-primary);
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .location-name {
    font-weight: 600;
  }

  .location-address {
    color: var(--text-muted) !important;
    font-size: 0.875rem !important;
  }

  .directions-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    margin-top: 0.5rem;
    color: var(--brand-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .directions-link:hover {
    text-decoration: underline;
  }

  .event-description {
    margin-bottom: 2rem;
  }

  .event-description h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .event-description p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-muted);
  }

  .event-content {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .event-content :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  .event-content :global(h3) {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem;
  }

  .event-content :global(p) {
    margin: 0 0 1rem;
    line-height: 1.7;
  }

  .event-content :global(ul),
  .event-content :global(ol) {
    margin: 0 0 1rem;
    padding-left: 1.5rem;
  }

  .event-content :global(li) {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 600px) {
    .event-header {
      flex-direction: column;
      gap: 1rem;
    }

    .event-date-badge {
      flex-direction: row;
      gap: 0.75rem;
      width: fit-content;
      height: auto;
      padding: 0.75rem 1.25rem;
    }

    .event-date-badge__day {
      font-size: 1.5rem;
    }

    .event-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
