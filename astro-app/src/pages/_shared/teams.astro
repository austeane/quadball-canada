        </svg>
        {discordCta.buttonLabel}
      </a>
    </section>
  </section>
</Layout>

<style>
  .teams {
    padding: 3rem 0;
    display: grid;
    gap: 3rem;
  }

  .teams__intro {
    display: grid;
    gap: 1rem;
    max-width: 720px;
  }

  .teams__intro h1 {
    margin: 0;
  }

  .teams__intro-content :global(p) {
    margin: 0;
  }

  .teams__cta {
    text-align: center;
    padding: 2.5rem 1.5rem;
    border-radius: 1.25rem;
    background: var(--brand-tint);
    display: grid;
    gap: 1rem;
    max-width: 720px;
    margin: 0 auto;
  }

  .teams__cta h2 {
    margin: 0;
  }

  .teams__cta p {
    margin: 0 auto;
    max-width: 48ch;
  }

  .teams__cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.75rem;
    border-radius: 999px;
    font-weight: 700;
    background: var(--brand-primary);
    color: #fff;
    text-decoration: none;
  }

  .teams__cta-btn:hover {
    background: var(--brand-ink);
  }

  .teams__discord {
    text-align: center;
    padding: 2rem 1.5rem;
    border-radius: 1.25rem;
    background: #5865F2;
    color: #fff;
    display: grid;
    gap: 0.75rem;
    max-width: 720px;
    margin: 0 auto;
  }

  .teams__discord h2 {
    margin: 0;
    color: #fff;
  }

  .teams__discord p {
    margin: 0 auto;
    max-width: 48ch;
    opacity: 0.9;
  }

  .teams__discord-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.85rem 1.75rem;
    border-radius: 999px;
    font-weight: 700;
    background: #fff;
    color: #5865F2;
    text-decoration: none;
    margin-top: 0.5rem;
  }

  .teams__discord-btn:hover {
    background: rgba(255, 255, 255, 0.9);
  }
</style>
