---
import Layout from "@/layouts/Layout.astro";
import PageHero from "@/components/sections/PageHero.astro";
import type { Locale } from "@/utils/localization";
import { getEventBidsPage, getPageSettings } from "@/utils/sanity";
import { formatDate } from "@/utils";
import { t } from "@/i18n/ui";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props as Props;
const isFr = locale === "fr";

const page = await getEventBidsPage(locale);
const pageSettings = await getPageSettings();

const alternate = {
  en: "/events/bids/",
  fr: "/fr/evenements/appels-doffres/",
};

const hostEventPath = isFr
  ? "/fr/simpliquer/organiser-un-evenement/"
  : "/get-involved/host-an-event/";

const criteriaKeys = [
  "eventBids.criteria.venue",
  "eventBids.criteria.budget",
  "eventBids.criteria.accommodation",
  "eventBids.criteria.travel",
  "eventBids.criteria.organizing",
  "eventBids.criteria.community",
] as const;

const steps = [
  { key: "eventBids.howToBid.step1" as const },
  { key: "eventBids.howToBid.step2" as const },
  { key: "eventBids.howToBid.step3" as const },
  { key: "eventBids.howToBid.step4" as const },
];

const statusLabel =
  page?.currentBids?.status === "open"
    ? t(locale, "eventBids.status.open")
    : page?.currentBids?.status === "coming-soon"
      ? t(locale, "eventBids.status.comingSoon")
      : t(locale, "eventBids.status.closed");

const statusClass =
  page?.currentBids?.status === "open"
    ? "status-badge--open"
    : page?.currentBids?.status === "coming-soon"
      ? "status-badge--coming-soon"
      : "status-badge--closed";
---

<Layout
  title={`${t(locale, "eventBids.title")} — Quadball Canada`}
  alternate={alternate}
  locale={locale}
>
  <!-- 1. PageHero -->
  <PageHero
    title={t(locale, "eventBids.title")}
    subtitle={t(locale, "eventBids.subtitle")}
    image={pageSettings?.eventsHeroImage ?? pageSettings?.defaultHeroImage}
  />

  <div class="page-body">
    <!-- 2. Intro + Criteria -->
    <section class="section">
      <div class="intro-grid">
        <div>
          <span class="label-tag">{t(locale, "eventBids.intro.heading")}</span>
          <h2>{isFr ? "Comment les championnats trouvent un lieu d'accueil" : "How Championships Find a Home"}</h2>
          <p class="section-intro">{t(locale, "eventBids.intro.body")}</p>
        </div>
        <div>
          <h3>{t(locale, "eventBids.selection.heading")}</h3>
          <div class="criteria-chips">
            {criteriaKeys.map((key) => (
              <span class="chip">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                  <path d="M13.3 2.7L6 10 2.7 6.7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {t(locale, key)}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- 3. How to Bid (vertical timeline) -->
    <section class="section section--alt">
      <span class="label-tag">{isFr ? "Étape par étape" : "Step by Step"}</span>
      <h2>{t(locale, "eventBids.howToBid.heading")}</h2>
      <div class="timeline">
        {steps.map((step, i) => (
          <div class="timeline-step" data-step={String(i + 1)}>
            <p>{t(locale, step.key)}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- 4. Current Bid Cycle -->
    {page?.currentBids && (
      <section class="section">
        <h2>{t(locale, "eventBids.currentBids.heading")}</h2>
        <div class="bid-cycle">
          <div class="bid-cycle-header">
            <span class:list={["status-badge", statusClass]}>{statusLabel}</span>
          </div>
          {page.currentBids.statusMessage && (
            <p class="bid-cycle-message">{page.currentBids.statusMessage}</p>
          )}
          {page.currentBids.deadline && (
            <div class="bid-cycle-meta">
              <strong>{t(locale, "eventBids.deadline")}:</strong> {formatDate(page.currentBids.deadline, locale)}
            </div>
          )}
          <div class="bid-actions">
            {page.currentBids.bidManualFile?.asset?.url && (
              <a href={page.currentBids.bidManualFile.asset.url} class="btn btn--outline" target="_blank" rel="noopener noreferrer">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                  <path d="M8 12V4m0 8l-3-3m3 3l3-3M3 14h10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {page.currentBids.bidManualTitle ?? t(locale, "eventBids.downloadManual")}
              </a>
            )}
            {page.currentBids.submissionUrl && page.currentBids.status === "open" && (
              <a href={page.currentBids.submissionUrl} class="btn btn--primary" target="_blank" rel="noopener noreferrer">
                {t(locale, "eventBids.submitBid")}
              </a>
            )}
          </div>
        </div>
      </section>
    )}

    {!page?.currentBids && (
      <section class="section">
        <h2>{t(locale, "eventBids.currentBids.heading")}</h2>
        <p>{t(locale, "eventBids.noCurrentCycle")}</p>
      </section>
    )}

    <!-- 5. Selected Hosts -->
    {(page?.domesticHosts.length || page?.internationalHosts.length) && (
      <section class="section section--alt">
        <div class="hosts-duo">
          {page.domesticHosts.length > 0 && (
            <div>
              <h2>{t(locale, "eventBids.domesticHosts.heading")}</h2>
              <div class="table-wrap">
                <table class="hosts-table">
                  <thead>
                    <tr>
                      <th>{t(locale, "eventBids.hostsTable.event")}</th>
                      <th>{t(locale, "eventBids.hostsTable.city")}</th>
                      <th>{t(locale, "eventBids.hostsTable.date")}</th>
                    </tr>
                  </thead>
                  <tbody>
                    {page.domesticHosts.map((host) => (
                      <tr>
                        <td>
                          {host.eventUrl
                            ? <a href={host.eventUrl}>{host.eventName}</a>
                            : host.eventName}
                        </td>
                        <td>{host.hostCity}</td>
                        <td>{host.dateLabel ?? ""}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          )}

          {page.internationalHosts.length > 0 && (
            <div>
              <h2>{t(locale, "eventBids.internationalHosts.heading")}</h2>
              <div class="table-wrap">
                <table class="hosts-table">
                  <thead>
                    <tr>
                      <th>{t(locale, "eventBids.hostsTable.event")}</th>
                      <th>{t(locale, "eventBids.hostsTable.city")}</th>
                      <th>{t(locale, "eventBids.hostsTable.date")}</th>
                    </tr>
                  </thead>
                  <tbody>
                    {page.internationalHosts.map((host) => (
                      <tr>
                        <td>
                          {host.eventUrl
                            ? <a href={host.eventUrl}>{host.eventName}</a>
                            : host.eventName}
                          {host.description && <div class="host-desc">{host.description}</div>}
                        </td>
                        <td>{host.hostCity}</td>
                        <td>{host.dateLabel ?? ""}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- 6. Questions? -->
    <section class="section">
      <div class="contact-box">
        <h2>{t(locale, "eventBids.getInvolved.heading")}</h2>
        <p>{t(locale, "eventBids.getInvolved.body")}</p>
        <a href={`mailto:${t(locale, "eventBids.getInvolved.email")}`}>
          {t(locale, "eventBids.getInvolved.email")}
        </a>
      </div>
    </section>

    <!-- 7. Cross-link CTA -->
    <section class="section section--tint">
      <div class="cross-link">
        <h2>{t(locale, "eventBids.crossLink.heading")}</h2>
        <p>{t(locale, "eventBids.crossLink.body")}</p>
        <a href={hostEventPath} class="btn btn--primary">
          {t(locale, "eventBids.crossLink.cta")}
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Page body */
  .page-body {
    display: flex;
    flex-direction: column;
  }

  /* Section rhythm */
  .section {
    padding: 3.5rem 0;
  }

  .section--alt {
    background: var(--bg-secondary, #f8f9fa);
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    padding-left: calc(50vw - 50%);
    padding-right: calc(50vw - 50%);
  }

  .section--tint {
    background: var(--brand-tint);
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    padding-left: calc(50vw - 50%);
    padding-right: calc(50vw - 50%);
  }

  /* Typography */
  .label-tag {
    display: inline-block;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--brand-primary);
    margin-bottom: 0.5rem;
  }

  .section-intro {
    max-width: 720px;
    font-family: "PT Serif", serif;
    font-size: clamp(16px, 1.8vw, 19px);
    line-height: 1.7;
  }

  /* Intro grid */
  .intro-grid {
    display: grid;
    gap: 2.5rem;
    align-items: start;
  }

  @media (min-width: 768px) {
    .intro-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Criteria chips */
  .criteria-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    background: var(--bg, #fff);
    border: 1px solid var(--border, #e5e7eb);
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-strong, #222);
  }

  .chip svg {
    color: var(--brand-primary);
    flex-shrink: 0;
  }

  /* Vertical timeline */
  .timeline {
    position: relative;
    padding-left: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 640px;
    margin-top: 1.5rem;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 15px;
    top: 8px;
    bottom: 8px;
    width: 2px;
    background: var(--border, #e5e7eb);
  }

  .timeline-step {
    position: relative;
  }

  .timeline-step::before {
    content: attr(data-step);
    position: absolute;
    left: -3rem;
    top: 0;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--brand-primary);
    color: #fff;
    font-weight: 800;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .timeline-step p {
    font-size: 0.95rem;
    line-height: 1.55;
  }

  /* Current bid cycle */
  .bid-cycle {
    border: 2px solid var(--brand-primary);
    border-radius: 16px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .bid-cycle-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .status-badge--open {
    background: #dcfce7;
    color: #166534;
  }

  .status-badge--open::before {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    animation: pulse 2s infinite;
  }

  .status-badge--closed {
    background: #fee2e2;
    color: #991b1b;
  }

  .status-badge--coming-soon {
    background: #fef3c7;
    color: #92400e;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  .bid-cycle-message {
    font-family: "PT Serif", serif;
    font-size: 1.05rem;
  }

  .bid-cycle-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--gray-600, #6e7683);
  }

  .bid-cycle-meta strong {
    color: var(--text-strong, #222);
  }

  .bid-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    transition:
      transform 0.2s,
      box-shadow 0.2s,
      background 0.2s;
    cursor: pointer;
    border: none;
  }

  .btn:hover {
    transform: translateY(-1px);
  }

  .btn--primary {
    background: var(--brand-primary);
    color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .btn--primary:hover {
    background: var(--brand-ink);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .btn--outline {
    background: transparent;
    border: 2px solid var(--brand-primary);
    color: var(--brand-primary);
  }

  .btn--outline:hover {
    background: var(--brand-tint);
  }

  /* Host tables */
  .hosts-duo {
    display: grid;
    gap: 2.5rem;
  }

  @media (min-width: 1024px) {
    .hosts-duo {
      grid-template-columns: 1fr 1fr;
    }
  }

  .table-wrap {
    overflow-x: auto;
    border: 1px solid var(--border, #e5e7eb);
    border-radius: 12px;
    margin-top: 1rem;
  }

  .hosts-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  .hosts-table th {
    text-align: left;
    font-weight: 700;
    color: var(--text-strong, #222);
    padding: 0.75rem 1rem;
    border-bottom: 2px solid var(--text-strong, #222);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .hosts-table td {
    padding: 0.85rem 1rem;
    border-bottom: 1px solid var(--border, #e5e7eb);
    vertical-align: top;
  }

  .hosts-table tr:last-child td {
    border-bottom: none;
  }

  .hosts-table a {
    color: var(--brand-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .hosts-table a:hover {
    text-decoration: underline;
  }

  .host-desc {
    font-size: 0.85rem;
    color: var(--gray-600, #6e7683);
    margin-top: 0.25rem;
  }

  .table-wrap .hosts-table th:first-child,
  .table-wrap .hosts-table td:first-child {
    padding-left: 1.25rem;
  }

  .table-wrap .hosts-table th:last-child,
  .table-wrap .hosts-table td:last-child {
    padding-right: 1.25rem;
  }

  /* Contact box */
  .contact-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
    max-width: 520px;
    margin: 0 auto;
  }

  .contact-box a {
    color: var(--brand-primary);
    font-weight: 700;
    text-decoration: none;
    font-size: 1.1rem;
  }

  .contact-box a:hover {
    text-decoration: underline;
  }

  /* Cross-link CTA */
  .cross-link {
    text-align: center;
    padding: 3rem 1.5rem;
  }

  .cross-link p {
    max-width: 48ch;
    margin: 0 auto 1.25rem;
  }
</style>
